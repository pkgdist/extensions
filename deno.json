{
  "version": "0.1.5",
  "name": "@softdist/extensions",
  "license": "MIT",
  "exports": "./src/mod.ts",
  "test": {
    "include": []
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "types": []
  },
  "publish": {
    "include": [
      "src/**/**/*.ts",
      "src/**/**/*.md",
      "README.md"

    ]
  },
  "lint": {
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "src/tests/*.ts",
      "src/fixtures/**/*.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-explicit-any",
        "no-unused-vars",
        "require-await"
      ]
    }
  },
  "tasks": {
    "test": "deno test -A ",
    "publish": "deno task generate && deno run -A ./src/build_npm.ts 0.1.2 && cd npm && npm publish",
    "build": "deno run --allow-all src/make_version.ts",
    "check": "deno check src/mod.ts",
    "compile": "make build",
    "upgrade": "deno outdated --update --latest",
    "validate-hooks": "deno run -A npm:lefthook validate",
    "pre-commit": "deno run -A npm:lefthook run pre-commit",
    "pre-push": "deno run -A npm:lefthook run pre-push",
    "dev-install": "direnv allow .envrc",
    "run": "make run"
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.1",
    "@onjara/optic": "jsr:@onjara/optic@^2.0.3",
    "@std/assert": "jsr:@std/assert@1.0.13",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/fs": "jsr:@std/fs@^1.0.18",
    "@std/path": "jsr:@std/path@^1.1.0",
    "@std/semver": "jsr:@std/semver@^1.0.5",
    "@std/testing": "jsr:@std/testing@^1.0.13",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.7",
    "@olli/async-lock": "jsr:@olli/async-lock@^1.0.1",
    "@std/async": "jsr:@std/async@^1.0.13",
    "@std/collections": "jsr:@std/collections@^1.1.1",
    "@stdlib/string-replace": "npm:@stdlib/string-replace@^0.2.2",
    "fs": "npm:fs@^0.0.1-security",
    "lefthook": "npm:lefthook@^1.11.13",
    "node-emoji": "npm:node-emoji@^2.2.0",
    "testcontainers": "npm:testcontainers@^11.0.0"
  }
}
